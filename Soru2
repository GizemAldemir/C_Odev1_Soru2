#include <stdio.h>
#include <conio.h>

void main()
{
	int x,a,binlik,yüzlük,onluk,birlik;
	printf("4 haneli bir sayi giriniz: ");
	scanf_s("%d", &x);
	printf("Cozumlenecek sayi: %d\n\n", x);
	binlik=x/1000;
	printf("%d tane binlik vardir...\n", binlik);
	yüzlük=(x/100)%10;
	printf("%d tane yuzluk vardir...\n", yüzlük);
	onluk=(x/10)%10;
	printf("%d tane onluk vardir...\n", onluk);
	birlik=x%10;
	printf("%d tane birlik vardir...\n", birlik);

	_getch();


}
